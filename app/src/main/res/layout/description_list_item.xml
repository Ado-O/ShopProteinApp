<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="productDescription"
            type="com.example.user.lesson_android_development.data.ProductDescription" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:src="@drawable/arrow_right"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text='@{productDescription.name, default="title"}'
            android:layout_marginBottom="3dp"
            android:textSize="16dp"
            android:textColor="@color/darkTextHigh"
            app:layout_constraintBottom_toTopOf="@id/tv_des"
            app:layout_constraintLeft_toRightOf="@id/iv_arrow" />

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:text='@{productDescription.description, default="description"}'
            android:textSize="14dp"
            android:textColor="@color/darkTextMedium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_arrow" />

    </android.support.constraint.ConstraintLayout>
</layout>