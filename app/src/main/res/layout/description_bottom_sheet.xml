<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable name="selected" type="boolean" />

        <variable
            name="item"
            type="java.util.List"/>
    </data>

    <FrameLayout
        android:id="@+id/design_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_product"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:inputType="textMultiLine"
                android:textColor="@color/darkTextMedium"
                android:textSize="20dp"
                app:layout_constraintLeft_toRightOf="@id/iv_product"
                app:layout_constraintBottom_toTopOf="@id/tv_discount"/>

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:textColor="@color/darkTextDisabled"
                app:layout_constraintBottom_toTopOf="@id/view_line_top"
                app:layout_constraintLeft_toRightOf="@id/iv_product"
                />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorFloatButton"
                android:textSize="16dp"
                app:layout_constraintLeft_toRightOf="@id/tv_discount"
                app:layout_constraintBottom_toTopOf="@id/view_line_top"/>

            <View
                android:id="@+id/view_line_top"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_product" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity:"
                android:textSize="14dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/darkTextHigh"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_top"/>

            <ImageView
                android:id="@+id/minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:src="@{selected ? @drawable/circle_minus : @drawable/circle_minus_gray}"
                app:layout_constraintLeft_toRightOf="@id/quantity"
                app:layout_constraintTop_toBottomOf="@id/view_line_top"
                />

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20dp"
                android:textColor="@color/darkTextHigh"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@id/view_line_top"
                app:layout_constraintLeft_toRightOf="@id/minus"/>

            <ImageView
                android:id="@+id/plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/circle_plus"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@id/view_line_top"
                app:layout_constraintLeft_toRightOf="@id/number"/>

            <View
                android:id="@+id/view_line_bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/minus" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@color/colorFloatButton"
                android:layout_margin="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:text="ADD TO CART"
                android:textColor="@color/colorWhite"
                android:drawableLeft="@drawable/shopping_cart_white"
                app:layout_constraintTop_toBottomOf="@id/view_line_bottom"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </android.support.constraint.ConstraintLayout>
    </FrameLayout>
</layout>